[Unit]
Description=Sensor-driven screen + brightness control for the kiosk
After=multi-user.target

[Service]
Type=simple
User=kiosk
EnvironmentFile=/etc/pi-kiosk/kiosk.env
ExecStart=/opt/pi-kiosk/venv/bin/kiosk-sensors --config /etc/pi-kiosk/kiosk.env
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
